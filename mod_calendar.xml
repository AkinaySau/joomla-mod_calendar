<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.8" client="site" method="upgrade">
    <name>MOD_CALENDAR</name>
    <creationDate>30.05.18</creationDate>
    <author>sau</author>
    <authorEmail>akinaysau@gmail.com</authorEmail>
    <authorUrl>http://a-sau.ru</authorUrl>
    <copyright>A copyright</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <version>1.0</version>
    <description>MOD_CALENDAR_XML_DESCRIPTION</description>

    <files>
        <filename module="mod_calendar">mod_calendar.php</filename>
        <folder>tmpl</folder>
        <folder>assets</folder>
        <folder>language</folder>
        <filename>mod_calendar.xml</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/modules/mod_calendar/fields">
                <field
                        name="domain"
                        class="sau_field_text"
                        type="url"
                        label="MOD_CALENDAR_URL_LABEL"
                        description="MOD_CALENDAR_URL_DESCRIPTION"
                        hint="https://www.example.com"
                        filter="url"
                        validate="url"
                />
                <field type="SText"
                       name="test"
                />
            </fieldset>
            <fieldset
                    name="advanced">
                <field
                        name="moduleclass_sfx"
                        type="text"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
            </fieldset>
        </fields>
    </config>
</extension>
